package main

import "fmt"

func main() {

	var name, lastname string
	var id int

	fmt.Print("Name :")
	fmt.Scan(&name)

	fmt.Print("Lastname :")
	fmt.Scan(&lastname)
IDD:
	fmt.Print("ID :")
	fmt.Scan(&id)

	if id == 0 {
		fmt.Println("enter id agian")
		goto IDD
	} else if id != 0 {
		fmt.Printf("%d %v %v", id, name, lastname)
	}

}
